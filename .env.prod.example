# Production Environment Variables
# Copy this to .env.prod and update with your production values

# Application
SECRET_KEY=your-super-secret-key-change-this-in-production
ENVIRONMENT=production
DEBUG=false

# Database
POSTGRES_USER=imglink
POSTGRES_PASSWORD=your-secure-database-password
POSTGRES_DB=imglink

# Redis
REDIS_PASSWORD=your-secure-redis-password

# MinIO/S3
MINIO_ROOT_USER=imglink-admin
MINIO_ROOT_PASSWORD=your-secure-minio-password
S3_BUCKET=imglink-uploads

# URLs
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com
PORT=80

# Mailgun Configuration
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=noreply@mg.yourdomain.com
MAILGUN_FROM_NAME=ImgLink

# OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# SSL (if using nginx-proxy profile)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO